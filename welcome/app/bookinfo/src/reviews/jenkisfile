pipeline{
    agent any
    options {
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 1, unit: 'SECONDS')
    }
environment{
    IMAGE_NAME='reviews'
    VERSION="v${env.BUILD_NUMBER}"
    REPO='bennylederh'
    CREDENTIALS_ID='myDHCred'
    SNYK_TOKEN='xyz'

}
stages {
    stage('builder'){
        steps {
            script {
              sh 'docker build --target builder --tag  ${IMAGE_NAME}:${VERSION}-build -f welcome/app/bookinfo/src/reviews/Dockerfile welcome/app/bookinfo/src/reviews'
            }
        }
    }
    stage('security'){
            steps{
                script{
                    sh'docker build --target security --build-arg SNYK_TOKEN=${SNYK_TOKEN} --tag ${IMAGE_NAME}:${VERSION}-security -f welcome/app/bookinfo/src/reviews/Dockerfile welcome/app/bookinfo/src/reviews'
                    sh'docker run --rm ${IMAGE_NAME}:${VERSION}-security'}
                }
    }
    stage('Push'){
        steps{
            script{
                docker.withRegistry('https://index.docker.io/v1/',"${CREDENTIALS_ID}"){
                    sh'dockerpush${REPO}/${IMAGE_NAME}:${VERSION}'
                }
            }
        }
    }
}
}